/* pages/welcom/index.wxss */
page {
  background-color: #FFF9E930;
}

.container {
  opacity: 0;
  animation: show 300ms 100ms forwards;
  width: 100%;
  height: 100vh;
}

.main {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.welcom {
  width: 80%;
  display: flex;
  align-items: center;
  gap: 25px;
  font-size: 60rpx;
  margin: auto;
  margin-top: 400rpx;
}

.dsc {
  width: 80%;
  font-size: 30rpx;
  letter-spacing: 1rpx;
  padding: 30rpx;
  background-color: #ffffff30;
  border-radius: 30rpx;
  color: #00000050;
  margin: auto;
  margin-top: -20rpx;
}

.form {
  width: 80%;
  margin: auto;
  margin-top: 30rpx;
  margin-bottom: 100rpx;
}

input {
  height: 80rpx;
  background: #f5f5f5;
  border-radius: 20rpx;
  padding: 10rpx 30rpx;
  margin-top: 10rpx;
  margin-bottom: 20rpx;
}

.form .title {
  margin-left: 30rpx;
  font-size: 30rpx;
  color: #000000;
}

.icon {
  border-radius: 30rpx;
  width: 100rpx;
  height: 100rpx;
}