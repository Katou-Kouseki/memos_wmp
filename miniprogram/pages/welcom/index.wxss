/* pages/welcom/index.wxss */
page {
  background-color: #ffffff;
}

.changeIcon {
  position: fixed;
  z-index: 3;
  border-radius: 50%;
  opacity: 0.6;
  backdrop-filter: blur(100rpx);
  border: 1rpx solid #00000020;
  background-size: cover;
  background-image: url(data:image/svg+xml;base64,);
}

page::before {
  content: '';
  display: block;
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  opacity: 0.5;
  opacity: 0;
  animation: show 2s alternate-reverse ease-in-out infinite;
}

.container {
  opacity: 0;
  animation: show 300ms 100ms forwards;
  width: 100%;
  height: 100vh;
}

.main {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.piecs {
  /* opacity: 0.8; */
  animation: flow 1s 100ms alternate-reverse infinite ease-in-out;
  margin-top: 200rpx;
  width: 120px;
  height: 90px;
  margin-left: 10%;
  background-size: cover;
  background-image: url(data:image/svg+xml;base64,);
}

.welcom {
  font-weight: bolder;
  font-family: sans-serif;
  width: 80%;
  display: flex;
  align-items: center;
  gap: 25px;
  font-size: 60rpx;
  margin: auto;
}

.tips .content {
  margin: 30rpx;
  margin-top: 50rpx;
  color: #ffffff;
}

.tips {
  pointer-events: auto;
  height: 400rpx;
  width: 100%;
  background-color: #07C160;
  border-radius: 30rpx 30rpx 0 0;
}

.slogan {
  font-weight: bolder;
  font-family: sans-serif;
  width: 80%;
  font-size: 40rpx;
  letter-spacing: 1rpx;
  padding: 20rpx;
  border-radius: 30rpx;
  color: #FCA417;
  margin: auto;
  margin-top: -20rpx;
}

.dsc {
  word-break: break-all;
  width: 80%;
  font-size: 30rpx;
  letter-spacing: 1rpx;
  padding: 10rpx;
  background-color: #ffffff30;
  border-radius: 30rpx;
  color: #00000050;
  margin: auto;
  margin-top: -20rpx;
}

.form {
  width: 80%;
  margin: auto;
  margin-top: 30rpx;
  margin-bottom: 100rpx;
}

input {
  height: 80rpx;
  background: #f5f5f550;
  border-radius: 20rpx;
  padding: 10rpx 30rpx;
  margin-top: 10rpx;
  margin-bottom: 20rpx;
  border: 5rpx solid #00000010;
}

input:focus {
  border: 2rpx solid #FCA41750;
}

.form .title {
  margin-left: 30rpx;
  font-size: 30rpx;
  color: #000000;
}

.icon {
  border-radius: 30rpx;
  width: 100rpx;
  height: 100rpx;
}

@keyframes flow {
  from {
    transform: translateY(0);
  }

  to {
    transform: translateY(-10rpx);
  }
}

@import 'index-wxa-auto-dark.wxss'