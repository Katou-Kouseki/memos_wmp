/* pages/home/index.wxss */
.counter-block {
  margin: 10rpx;
}

.memo-link-text {
  color: #07C160;
}

.todo-block {
  margin: 0rpx 20rpx;
}

.todo {
  color: #FCA417;
}

.done {
  color: #07C160;
}

.header {
  z-index: 5;
  position: fixed;
  display: flex;
  align-items: center;
  color: #cccccc;
  background: #f5f5f580;
  backdrop-filter: blur(30px);
  padding: 5rpx 20rpx;
  border-radius: 99rpx;
  opacity: 0;
  animation: show 300ms 100ms forwards;
}

.icon {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  border: 1rpx solid #cccccc50;
  margin-right: 20rpx;
}

.none {
  margin: 30rpx;
  font-size: 30rpx;
  color: #00000050;
  text-align: center;
  opacity: 0;
  animation: show 300ms 500ms forwards;
}